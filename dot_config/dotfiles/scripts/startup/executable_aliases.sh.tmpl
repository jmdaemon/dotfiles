ffmpegvol() {
    # Show the mean and max volume of a file
    audio_file="$1"
    ffmpeg -i $audio_file -filter:a volumedetect -f null /dev/null 2>&1 | grep "mean_volume\|max_volume" | cut -d ' ' -f5
}
